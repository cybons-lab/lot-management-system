# ===================================
# ロット管理システム - 環境変数設定
# ===================================

# 環境（development / production）
ENVIRONMENT=development

# === PostgreSQL接続情報 ===
# Docker環境では docker-compose.yml で設定されるため不要
# ローカル実行する場合のみ設定
# DATABASE_URL=postgresql://admin:dev_password@localhost:5432/lot_management



# === CORS設定 ===
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# === セキュリティ（本番環境では必ず変更） ===
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === アップロード設定 ===
MAX_UPLOAD_SIZE=10485760  # 10MB

# === アラート設定 ===
ALERT_EXPIRY_CRITICAL_DAYS=30
ALERT_EXPIRY_WARNING_DAYS=60

# === ログ設定 ===
# ログレベル（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# ファイル出力を有効にするか（true / false）
LOG_FILE_ENABLED=true

# JSON形式でログ出力するか（true / false）
# 開発環境: false（カラー付きテキスト）
# 本番環境: true（JSON形式）
LOG_JSON_FORMAT=false

# ログファイルのローテーションサイズ（バイト）
LOG_ROTATION_SIZE=104857600  # 100MB

# ログファイルの保持期間（日数）
LOG_RETENTION_DAYS=30

# ログファイルのバックアップ数
LOG_BACKUP_COUNT=10
